{
  browserSync: {
    port: 5678
  }
  outputDir: public
  locals: {
    name: Caleb
  }
  transformers: {
    uglify-js: {
      mangle: {toplevel: true}
    }
    rollup: {
      format: es
      plugins: {
        rollup-plugin-node-resolve: {}
        rollup-plugin-commonjs: {}
      }
    }
  }
  files: {
    **/*.styl: {
      transforms: stylus | autoprefixer | csso
      depends_on: [
        **/*.css
        **/*.styl
      ]
    }
    **/*.pug: pug | html-minifier
    app.js: rollup | buble | uglify-js
  }
}
