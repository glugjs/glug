{
  browserSync: {
    port: 5678
  }
  outputDir: public
  locals: {
    name: Caleb
  }
  transformers: {
    babel: {
      presets: [
        latest
      ]
    }
  }
  files: {
    **/*.styl: {
      transforms: stylus | autoprefixer | csso
      depends_on: [
        **/*.css
        **/*.styl
      ]
    }
    **/*.pug: [
      pug
      html-minifier
    ]
    **/*.js: babel
  }
}
